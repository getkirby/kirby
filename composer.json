{
  "name": "getkirby/kirby",
  "description": "Kirby CMS",
  "version": "3.0.0-RC-1.3",
  "keywords": ["kirby", "cms"],
  "homepage": "https://getkirby.com",
  "type": "kirby-cms",
  "authors": [
    {
      "name": "Kirby Team",
      "email": "support@getkirby.com",
      "homepage": "https://getkirby.com"
    }
  ],
  "support": {
    "email": "support@getkirby.com",
    "issues": "https://github.com/getkirby/kirby/issues",
    "forum": "https://forum.getkirby.com",
    "source": "https://github.com/getkirby/kirby"
  },
  "require": {
    "php": ">=7.1.0",
    "ext-mbstring": "*",
    "getkirby/composer-installer": "*",
    "mustangostang/spyc": "0.6.*",
    "erusev/parsedown": "1.8.0-beta-5",
    "erusev/parsedown-extra": "0.8.0-beta-1",
    "michelf/php-smartypants": "1.8.*",
    "claviska/simpleimage": "3.3.*",
    "phpmailer/phpmailer": "6.0.*",
    "filp/whoops": "2.3.*",
    "true/punycode": "2.1.*",
    "zendframework/zend-escaper": "2.6.*"
  },
  "require-dev": {
    "phpunit/phpunit": "^6.0",
    "friendsofphp/php-cs-fixer": "^2.11.1"
  },
  "autoload": {
    "files": ["config/helpers.php", "config/aliases.php"],
    "psr-4": {
      "Kirby\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Kirby\\": "tests/"
    }
  },
  "scripts": {
    "test": "./vendor/bin/phpunit --stderr --coverage-html=tests/coverage",
    "zip": "composer archive --format=zip --file=dist",
    "build": "./scripts/build",
    "fix": "./vendor/bin/php-cs-fixer fix ."
  },
  "config": {
    "optimize-autoloader": true
  },
  "archive": {
    "exclude": [
      ".*",
      "/*.dist",
      "/*.md",
      "test.php",
      "/scripts",
      "/panel/*",
      "!/panel/dist/*",
      "/panel/dist/index.html",
      "/tests/*",
      "!/vendor/*",
      "/vendor/*/*/.*",
      "/vendor/*/*/*.json",
      "/vendor/*/*/*.txt",
      "/vendor/*/*/*.md",
      "/vendor/*/*/*.yml",
      "/vendor/*/*/*.yaml",
      "/vendor/*/*/*.xml",
      "/vendor/*/*/*.dist",
      "/vendor/*/*/LICENSE",
      "/vendor/*/*/COPYING",
      "/vendor/*/*/docs/*",
      "/vendor/*/*/example/*",
      "/vendor/*/*/examples/*",
      "/vendor/*/*/test/*",
      "/vendor/*/*/tests/*",
      "/vendor/*/*/php4/*"
    ]
  }
}
