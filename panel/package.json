{
  "name": "kirby",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve --open",
    "build": "vue-cli-service build && mv dist/js/chunk*.js dist/js/vendor.js && rm dist/index.html",
    "lint": "vue-cli-service lint",
    "pre-commit": "pretty-quick --staged",
    "sandbox": "vue serve ./src/ui/main.js",
    "test:e2e": "vue-cli-service test:e2e",
    "test:e2e:record": "vue-cli-service test:e2e --headless --record --key 6e3e7aae-66e8-4d69-8e62-0210742b8415",
    "test:unit": "vue-cli-service test:unit",
    "testkit:reset": "./scripts/reset-testkit"
  },
  "dependencies": {
    "autosize": "^4.0.2",
    "dayjs": "^1.7.8",
    "npm": "^6.5.0",
    "slugify": "^1.3.4",
    "vue": "^2.5.21",
    "vue-router": "^3.0.2",
    "vuedraggable": "^2.17.0",
    "vuelidate": "^0.6.2",
    "vuex": "^3.0.1",
    "vuex-i18n": "^1.10.0"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.2.0",
    "@vue/cli-plugin-e2e-cypress": "^3.2.0",
    "@vue/cli-plugin-eslint": "^3.2.1",
    "@vue/cli-plugin-unit-jest": "^3.3.0",
    "@vue/cli-service": "^3.2.0",
    "@vue/test-utils": "^1.0.0-beta.20",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "^23.6.0",
    "babel-plugin-wildcard": "^4.0.0",
    "node-sass": "^4.11.0",
    "prettier": "1.12.0",
    "pretty-quick": "^1.8.0",
    "sass-loader": "^7.1.0",
    "vue-template-compiler": "^2.5.21"
  },
  "babel": {
    "presets": [
      "@vue/app"
    ],
    "plugins": [
      "wildcard"
    ]
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "plugin:vue/recommended",
      "eslint:recommended"
    ],
    "rules": {
      "vue/require-default-prop": "off",
      "vue/attributes-order": "error",
      "vue/require-prop-types": "error",
      "vue/max-attributes-per-line": [
        "error",
        {
          "singleline": 3,
          "multiline": {
            "max": 1,
            "allowFirstLine": false
          }
        }
      ],
      "vue/html-closing-bracket-newline": [
        "error",
        {
          "singleline": "never",
          "multiline": "always"
        }
      ]
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
