{
  "name": "kirby",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve --open",
    "build": "vue-cli-service build",
    "e2e": "vue-cli-service test:e2e",
    "lint": "vue-cli-service lint",
    "precommit": "pretty-quick --staged",
    "sandbox": "vue serve ./src/ui/main.js"
  },
  "dependencies": {
    "autosize": "^4.0.1",
    "dayjs": "^1.6.9",
    "npm": "^6.1.0",
    "slugify": "^1.2.6",
    "textarea-caret": "^3.1.0",
    "vue": "^2.5.13",
    "vue-router": "^3.0.1",
    "vuedraggable": "^2.16.0",
    "vuelidate": "^0.6.2",
    "vuex": "^3.0.1",
    "vuex-i18n": "^1.10.0"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^v3.0.0-rc.3",
    "@vue/cli-plugin-e2e-cypress": "^v3.0.0-rc.3",
    "@vue/cli-plugin-eslint": "^v3.0.0-rc.3",
    "@vue/cli-service": "^v3.0.0-rc.3",
    "babel-plugin-wildcard": "^4.0.0",
    "husky": "^0.14.3",
    "node-sass": "^4.9.0",
    "prettier": "1.12.0",
    "pretty-quick": "^1.4.1",
    "sass-loader": "^7.0.1",
    "vue-template-compiler": "^2.5.13"
  },
  "babel": {
    "presets": [
      "@vue/app"
    ],
    "plugins": [
      "wildcard"
    ]
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "plugin:vue/recommended",
      "eslint:recommended"
    ],
    "rules": {
      "vue/require-default-prop": "off",
      "vue/attributes-order": "error",
      "vue/require-prop-types": "error",
      "vue/max-attributes-per-line": [
        "error",
        {
          "singleline": 3,
          "multiline": {
            "max": 1,
            "allowFirstLine": false
          }
        }
      ],
      "vue/html-closing-bracket-newline": [
        "error",
        {
          "singleline": "never",
          "multiline": "always"
        }
      ]
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
