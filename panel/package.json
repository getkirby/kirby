{
  "name": "kirby",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve --open",
    "build": "vue-cli-service build && mv dist/js/chunk*.js dist/js/vendor.js && rm dist/index.html && mv dist/css/app*.css dist/css/app.css",
    "lint": "vue-cli-service lint",
    "pre-commit": "pretty-quick --staged",
    "storybook:build": "vue-cli-service storybook:build -c storybook",
    "storybook:serve": "vue-cli-service storybook:serve -p 6006 -c storybook --ci",
    "cypress:open": "cypress open",
    "test:e2e": "start-server-and-test 'storybook:serve' :6006 'cypress:open'"
  },
  "dependencies": {
    "@linusborg/vue-simple-portal": "^0.1.4",
    "autosize": "^4.0.2",
    "dayjs": "^1.8.27",
    "npm": "^6.14.5",
    "vue": "^2.6.11",
    "vue-router": "^3.2.0",
    "vuedraggable": "^2.23.2",
    "vuex": "^3.4.0",
    "vuex-i18n": "^1.13.1"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^5.3.19",
    "@storybook/addon-storysource": "^5.3.19",
    "@storybook/vue": "^5.3.19",
    "@vue/cli-plugin-babel": "^4.3.1",
    "@vue/cli-plugin-eslint": "~4.2.3",
    "@vue/cli-service": "~4.2.3",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^10.0.3",
    "babel-loader": "^8.1.0",
    "babel-plugin-wildcard": "^4.0.0",
    "core-js": "^3.6.5",
    "cypress": "^4.6.0",
    "cypress-plugin-snapshots": "^1.4.3",
    "eslint": "^6.7.2",
    "eslint-plugin-vue": "^6.1.2",
    "miragejs": "^0.1.40",
    "node-sass": "^4.14.1",
    "prettier": "^1.19.1",
    "pretty-quick": "^1.11.1",
    "sass-loader": "^8.0.2",
    "start-server-and-test": "^1.11.0",
    "vue-cli-plugin-storybook": "~1.2.2",
    "vue-template-compiler": "^2.6.11"
  },
  "babel": {
    "plugins": [
      "wildcard"
    ]
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "plugin:vue/recommended",
      "eslint:recommended"
    ],
    "rules": {
      "vue/require-default-prop": "off",
      "vue/return-in-computed-property": "warn",
      "vue/attributes-order": "error",
      "vue/require-prop-types": "error",
      "vue/max-attributes-per-line": [
        "error",
        {
          "singleline": 3,
          "multiline": {
            "max": 1,
            "allowFirstLine": false
          }
        }
      ],
      "vue/html-closing-bracket-newline": [
        "error",
        {
          "singleline": "never",
          "multiline": "always"
        }
      ]
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "last 2 Android versions",
    "last 2 Chrome versions",
    "last 2 ChromeAndroid versions",
    "last 2 Edge versions",
    "last 2 Firefox versions",
    "last 2 FirefoxAndroid versions",
    "last 2 iOS versions",
    "last 2 KaiOS versions",
    "last 2 Safari versions",
    "last 2 Samsung versions",
    "last 2 Opera versions",
    "last 2 OperaMobile versions",
    "last 2 UCAndroid versions"
  ]
}
