{
  "name": "kirby",
  "private": true,
  "scripts": {
    "build": "vue-cli-service build && mv dist/js/chunk*.js dist/js/vendor.js && rm dist/index.html",
    "cy:run": "cypress run",
    "cy:open": "cypress open",
    "dev": "vue-cli-service serve --open",
    "lint": "vue-cli-service lint",
    "pre-commit": "pretty-quick --staged",
    "serve": "vue-cli-service serve --open",
    "test": "cypress run"
  },
  "dependencies": {
    "@linusborg/vue-simple-portal": "^0.1.4",
    "autosize": "^4.0.2",
    "dayjs": "^1.9.1",
    "npm": "^6.14.7",
    "tiptap": "^1.30.0",
    "tiptap-extensions": "^1.33.2",
    "vue": "^2.6.11",
    "vue-router": "^3.1.6",
    "vuedraggable": "^2.23.2",
    "vuelidate": "^0.6.2",
    "vuex": "^3.1.3",
    "vuex-i18n": "^1.13.1"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^4.4.6",
    "@vue/cli-plugin-eslint": "^3.12.1",
    "@vue/cli-service": "^3.12.1",
    "babel-core": "7.0.0-bridge.0",
    "babel-plugin-wildcard": "^4.0.0",
    "cypress": "^4.11.0",
    "node-sass": "^4.14.1",
    "prettier": "^1.19.1",
    "pretty-quick": "^1.11.1",
    "raw-loader": "^4.0.1",
    "sass-loader": "^7.3.1",
    "vue-template-compiler": "^2.6.11",
    "wait-on": "^5.1.0"
  },
  "babel": {
    "presets": [
      "@vue/app"
    ],
    "plugins": [
      "wildcard"
    ]
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "plugin:vue/recommended",
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2017
    },
    "rules": {
      "vue/require-default-prop": "off",
      "vue/attributes-order": "error",
      "vue/require-prop-types": "error",
      "vue/max-attributes-per-line": [
        "error",
        {
          "singleline": 3,
          "multiline": {
            "max": 1,
            "allowFirstLine": false
          }
        }
      ],
      "vue/html-closing-bracket-newline": [
        "error",
        {
          "singleline": "never",
          "multiline": "always"
        }
      ]
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
